strategy("My Test Strategy", overlay=true)

fastLength = input(7)
middleLength = input( 21 )
slowLength = input(55)
price = close
action=0
var actionline=price

//RSI
overSold = input( 30 )
overBought = input( 70 )

vrsi = ta.rsi(price, middleLength)
co = ta.crossover(vrsi, overSold)
cu = ta.crossunder(vrsi, overBought)

// if (not na(vrsi))
